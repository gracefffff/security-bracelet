<?xml version="1.0"?>
<web-app>
    <listener>
        <listener-class>school.project.securitybracelet.config.StartUpConfig</listener-class>
    </listener>

    <servlet>
        <servlet-name>patient</servlet-name>
        <servlet-class>school.project.securitybracelet.servlets.PatientController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>patient</servlet-name>
        <url-pattern>/patient</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>school.project.securitybracelet.servlets.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>school.project.securitybracelet.servlets.SignUpController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
</web-app>